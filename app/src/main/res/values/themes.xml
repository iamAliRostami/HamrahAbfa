<resources>
    <!-- Base application theme. -->
    <style name="Theme.HamrahAbfa" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_7001</item>
        <item name="colorPrimaryVariant">@color/purple_7002</item>
        <item name="colorOnPrimary">@color/light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_7001</item>
<!--        <item name="colorSecondaryVariant">@color/teal_700</item>-->
        <item name="colorSecondaryVariant">@color/purple_7002</item>
        <item name="colorOnSecondary">@color/dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
<!--        <item name="background">@color/light_blue</item>-->
<!--        <item name="android:background">@color/light_blue</item>-->
        <item name="android:layoutDirection">rtl</item>.
        <item name="android:fontFamily">@font/iranian_sans</item>
        <item name="fontFamily">@font/iranian_sans</item>
        <item name="font">@font/iranian_sans</item>

        <item name="bottomSheetDialogTheme">@style/BottomSheetDialogTheme</item>

        <item name="font_small">@dimen/font_small_value</item>
        <item name="font_medium">@dimen/font_medium_value</item>
        <item name="font_large">@dimen/font_large_value</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="Theme.HamrahAbfa.Tiny">

    </style>

    <style name="Theme.HamrahAbfa.Small">
        <item name="font_small">@dimen/font_tiny_value</item>
        <item name="font_medium">@dimen/font_small_value</item>
        <item name="font_large">@dimen/font_medium_value</item>
    </style>

    <style name="Theme.HamrahAbfa.Large">
        <item name="font_small">@dimen/font_medium_value</item>
        <item name="font_medium">@dimen/font_large_value</item>
        <item name="font_large">@dimen/font_xlarge_value</item>
    </style>


    <style name="Theme.HamrahAbfa.Huge">
        <item name="font_small">@dimen/font_large_value</item>
        <item name="font_medium">@dimen/font_xlarge_value</item>
        <item name="font_large">@dimen/font_huge_value</item>
    </style>

    <style name="Theme.HamrahAbfa.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/AppearanceBottomSheet</item>
    </style>

    <style name="AppearanceBottomSheet" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/medium_dp</item>
        <item name="cornerSizeTopLeft">@dimen/medium_dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>
</resources>