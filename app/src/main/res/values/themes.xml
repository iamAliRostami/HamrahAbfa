<resources>
    <!-- Base application theme. -->
    <style name="Theme.HamrahAbfa" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
<!--            <style name="Theme.HamrahAbfa" parent="Theme.AppCompat.Light.DarkActionBar">-->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@android:color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!--                <item name="background">@drawable/background</item>-->
        <!--        <item name="android:background">@drawable/background</item>-->
        <item name="android:layoutDirection">rtl</item>.
        <item name="fontFamily">@font/font_1</item>
        <item name="font">@font/font_1</item>

        <item name="bottomSheetDialogTheme">@style/BottomSheetDialogTheme</item>

<!--        <item name="windowActionBar">false</item>-->
<!--        <item name="windowNoTitle">true</item>-->

    </style>
    <!--    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">-->
    <!--        <item name="android:windowBackground">@drawable/background_splash</item>-->
    <!--    </style>-->
    <style name="Theme.HamrahAbfa.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation duration. -->
        <item name="windowSplashScreenBackground">@android:color/white</item>

        <!-- Use windowSplashScreenAnimatedIcon to add either a drawable or an
             animated drawable. One of these is required. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/animated_vector_drawable</item>
        <!-- Required for animated icons -->
        <item name="windowSplashScreenAnimationDuration">9000</item>

        <!-- Set the theme of the Activity that directly follows your splash screen. -->
        <!-- Required -->
        <item name="postSplashScreenTheme">@style/Theme.HamrahAbfa</item>
    </style>

<!--    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">-->
<!--        <item name="bottomSheetStyle">@style/AppModalStyle</item>-->
<!--    </style>-->

<!--    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">-->
<!--        <item name="android:background">@drawable/background_bottom_sheet</item>-->
<!--    </style>-->

    <style name="BottomSheetDialogTheme" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/AppearanceBottomSheet</item>
    </style>

    <style name="AppearanceBottomSheet" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/medium_dp</item>
        <item name="cornerSizeTopLeft">@dimen/medium_dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>
</resources>