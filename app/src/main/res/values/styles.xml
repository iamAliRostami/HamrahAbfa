<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:textAppearance">@style/TextStyleMedium.Bold</item>
    </style>

    <style name="Title.Bottom">
        <item name="android:paddingTop">@dimen/large_dp</item>
        <item name="android:paddingBottom">@dimen/large_dp</item>
        <item name="android:textAppearance">@style/TextStyleMedium</item>
    </style>

    <style name="TitleHelp" parent="Title">
        <item name="android:textAppearance">@style/TextStyleSmall</item>
    </style>

    <style name="TextSubmitInfo" parent="Title">
        <item name="android:textAppearance">@style/TextStyleSmall</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">center_vertical|end</item>
        <item name="android:layout_marginEnd">@dimen/medium_dp</item>
        <item name="android:layout_marginStart">@dimen/medium_dp</item>
        <item name="android:justificationMode" tools:ignore="NewApi">inter_word</item>
    </style>

    <style name="TitleSubmitInfo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ButtonSubmit" parent="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/background_blue</item>
        <item name="android:backgroundTint">@color/purple_7001</item>
        <item name="backgroundTint">@color/purple_7001</item>
        <item name="android:textColor">@color/light</item>
        <item name="android:textAppearance">@style/TextStyleSmall.Bold</item>
    </style>

    <style name="ButtonCancel" parent="Button">
        <item name="android:textAppearance">@style/TextStyleSmall.Bold</item>
        <item name="android:textColor">@color/purple_7001</item>
        <item name="android:background">@drawable/background_white_blue</item>
    </style>

    <style name="CardViewBottom" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MaterialCardView.Cut
        </item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialCardView.Cut" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/large_dp</item>
        <item name="cornerSizeTopLeft">@dimen/large_dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>


<!--    <style name="MenuLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">-->
    <style name="MenuLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
    <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxBackgroundColor">@color/light</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="hintTextColor">@color/purple_7001</item>
        <item name="boxStrokeColor">@color/purple_7001</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="helperTextEnabled">true</item>
        <item name="counterEnabled">false</item>
        <item name="errorEnabled">true</item>
        <item name="helperTextTextAppearance">@style/TextHelper</item>
        <item name="boxStrokeColor">@color/purple_7001</item>
        <item name="hintTextColor">@color/purple_7001</item>
        <item name="boxBackgroundColor">@color/light</item>
        <item name="boxBackgroundMode">outline</item>
    </style>

    <style name="TextHelper" parent="TextAppearance.Design.Hint">
        <item name="android:textAppearance">@style/TextStyleMedium</item>
    </style>

    <style name="TextInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="maxLines">1</item>
    </style>

    <style name="InputVerificationCode">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLength">1</item>
        <item name="android:inputType">number</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/background_input_verification</item>
        <item name="android:layout_margin">@dimen/medium_dp</item>
    </style>

    <style name="HeaderImageView">
        <item name="android:layout_width">@dimen/xlarge_dp</item>
        <item name="android:layout_height">@dimen/xlarge_dp</item>
        <item name="android:layout_marginTop">@dimen/medium_dp</item>
        <item name="android:layout_marginBottom">@dimen/medium_dp</item>
        <item name="android:padding">@dimen/medium_dp</item>
    </style>

    <style name="BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@drawable/bnv_tab_item_foreground</item>
        <item name="itemTextColor">@drawable/bnv_tab_item_foreground</item>
        <item name="itemTextAppearanceActive">@style/BottomNavigationView.TextAppearance.Active
        </item>
        <item name="android:background">@android:color/transparent</item>
        <item name="elevation">0dp</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BottomNavigationView.TextAppearance" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textAppearance">@style/TextStyleSmall</item>
    </style>

    <style name="BottomNavigationView.TextAppearance.Active" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">?attr/font_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextStyleSmall.Bold</item>
        <item name="android:padding">@dimen/large_dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:justificationMode" tools:ignore="NewApi">inter_word</item>
    </style>

    <style name="TextItem.SingleLine">

        <item name="maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ChipTextAppearance" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textColor">?android:attr/colorPrimary</item>
        <item name="android:textAppearance">@style/TextStyleMedium</item>
    </style>

    <style name="TextStyleSmall">
        <item name="android:textSize">?attr/font_small</item>
    </style>

    <style name="TextStyleSmall.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyleMedium">
        <item name="android:textSize">?attr/font_medium</item>
    </style>

    <style name="TextStyleMedium.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyleLarge">
        <item name="android:textSize">?attr/font_large</item>
    </style>

    <style name="TextStyleLarge.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ThemeTextStyle">
        <item name="android:textColor">?android:attr/textColor</item>
    </style>

</resources>