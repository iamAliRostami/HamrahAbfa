<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NewDialog" parent="Theme.AppCompat">
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Title">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HelpTitle" parent="Title">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/teal_2001</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="InputTitle" parent="Title">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextInput">
        <item name="android:paddingStart">@dimen/medium_dp</item>
        <item name="android:paddingEnd">@dimen/medium_dp</item>
        <item name="android:paddingTop">@dimen/small_dp</item>
        <item name="android:paddingBottom">@dimen/small_dp</item>
        <item name="background">@drawable/border_input</item>
        <item name="android:background">@drawable/border_input</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="Button" parent="ThemeOverlay.Material3.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ButtonSubmit" parent="Button">
        <item name="android:background">@drawable/border_button_submit</item>
        <item name="android:textColor">@color/teal_2001</item>
    </style>
</resources>