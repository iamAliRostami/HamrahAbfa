<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NewDialog" parent="Theme.AppCompat">
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Title">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">@dimen/large_dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HelpTitle" parent="Title">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="InputTitle" parent="Title">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextInput">
        <item name="android:paddingStart">@dimen/medium_dp</item>
        <item name="android:paddingEnd">@dimen/medium_dp</item>
        <item name="android:paddingTop">@dimen/small_dp</item>
        <item name="android:paddingBottom">@dimen/small_dp</item>
        <item name="android:layout_marginBottom">@dimen/medium_dp</item>
        <item name="android:background">@drawable/border_white_gray</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="LoginTextInput" parent="TextInput">
        <item name="android:layout_margin">@dimen/medium_dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/background_white_blue</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ButtonSubmit" parent="Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/background_blue</item>
        <item name="android:backgroundTint">@color/purple_7001</item>
        <item name="backgroundTint">@color/purple_7001</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="LoginButtonSubmit" parent="Button">
        <item name="android:background">@drawable/background_button_submit</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="VerificationStyle">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:letterSpacing">1</item>
        <item name="android:textColor">@android:color/white</item>

    </style>

    <style name="ClockCounterStyle">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:letterSpacing">0.1</item>
        <!--        <item name="android:gravity">start|top</item>-->
        <item name="android:textColor">@android:color/white</item>

    </style>

    <style name="RefreshStyle">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="CustomImageView">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Linearlayout">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="TextButtonStyle">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="CustomCardView" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MaterialCardView.Cut
        </item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialCardView.Cut" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/large_dp</item>
        <item name="cornerSizeTopLeft">@dimen/large_dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="TextInputLayoutTheme" parent="Widget.Design.TextInputLayout">
        <item name="colorOnSurface">@android:color/holo_blue_bright</item>
        <item name="hintTextColor">@color/purple_7001</item>
        <item name="helperTextTextColor">@android:color/holo_green_dark</item>
        <item name="android:strokeColor">@android:color/holo_orange_dark</item>
    </style>

    <style name="TextHelper" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="InputVerificationCode">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLength">1</item>
        <item name="android:inputType">number</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/background_input_verification</item>
        <item name="android:layout_margin">@dimen/medium_dp</item>
    </style>

</resources>