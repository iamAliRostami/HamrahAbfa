<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_view_abfa_icon"
        style="@style/HeaderImageView"
        android:layout_alignParentStart="true"
        android:layout_margin="@dimen/medium_dp"
        android:padding="@dimen/small_dp"
        android:src="@drawable/abfa_logo" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_view_type"
        style="@style/HeaderImageView"
        android:layout_toEndOf="@id/image_view_abfa_icon"
        android:padding="0dp"
        android:src="@drawable/abfa_type" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_view_notification"
        style="@style/HeaderImageView"
        android:layout_toStartOf="@id/image_view_setting"
        android:src="@drawable/notification" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_view_setting"
        style="@style/HeaderImageView"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/medium_dp"
        android:src="@drawable/setting" />

</RelativeLayout>