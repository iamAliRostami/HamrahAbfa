<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_dialog"
    tools:context=".fragments.dialog.SuccessfulPaymentFragment">
    <com.google.android.material.card.MaterialCardView
        style="@style/CardStyle"
        android:layout_width="wrap_content">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/large_dp"
            android:paddingStart="@dimen/xlarge_dp"
            android:paddingEnd="@dimen/xlarge_dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_view_title"
                style="@style/Title"
                android:text="@string/payment_succeed" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/linear_layout_copy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/medium_dp">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/text_view_track_number"
                    style="@style/TitleHelp"
                    android:text="123456" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/medium_dp"
                    android:src="@drawable/ic_copy" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_view_tin"
                style="@style/TitleSubmitInfo"
                android:text="@string/write_track_number" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottie_animation"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/ic_done"
                app:lottie_autoPlay="true"
                app:lottie_rawRes="@raw/payment" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_return"
                style="@style/ButtonSubmit"
                android:text="@string/main_page" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </com.google.android.material.card.MaterialCardView>

</androidx.appcompat.widget.LinearLayoutCompat>