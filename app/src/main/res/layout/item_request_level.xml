<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_view_level_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circular"
        android:padding="@dimen/large_dp"
        android:text="1"
        android:textColor="@color/light" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/contribute_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_level_number"
        android:layout_marginStart="@dimen/xlarge_dp"
        android:layout_marginEnd="@dimen/xlarge_dp"
        android:clickable="false"
        android:descendantFocusability="blocksDescendants"
        android:elevation="@dimen/medium_dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="@dimen/medium_dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image_view_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:padding="@dimen/small_dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/service_main_account_sale"
                android:tint="@color/purple_7001" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_view_title"
                style="@style/TextItem"
                android:layout_above="@id/divider"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@id/image_view_icon"
                android:gravity="center"
                android:text="@string/app_name"
                android:textAllCaps="true" />

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/tiny_dp"
                android:layout_below="@id/image_view_icon"
                android:background="@color/light_gray" />
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>