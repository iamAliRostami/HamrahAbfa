<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative_layout_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_card_empty"
    android:gravity="center"
    tools:context=".fragments.cards.CardEmptyFragment">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_view_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/separator"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_plus"
        app:tint="@color/light" />

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/large_dp"
        android:layout_centerInParent="true" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_view_enter_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/separator"
        android:layout_centerHorizontal="true"
        android:text="@string/enter_your_account"
        android:textColor="@color/light" />
</RelativeLayout>