<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/huge_dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    tools:context=".fragments.bottom_sheets.SubmitInfoFragment">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_view_arrow_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_down" />

    <TextView
        android:id="@+id/text_view_title"
        style="@style/Title"
        android:layout_marginTop="@dimen/huge_dp"
        android:layout_marginBottom="@dimen/huge_dp"
        android:text="@string/account_info_submit"
        android:textColor="@color/purple_7001" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/text_view_title_account"
        style="@style/TextInput"
        android:hint="@string/account_title" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/text_view_bill_id"
        style="@style/TextInput"
        android:hint="@string/enter_bill_id" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linear_layout_phone_number"
        style="@style/Linearlayout"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/huge_dp"
        android:background="@drawable/background_blue">

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/TextButtonStyle"
            android:text="09134588220" />

        <androidx.appcompat.widget.AppCompatImageView
            style="@style/CustomImageView"
            android:src="@drawable/smartphone" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_submit"
        style="@style/LoginButtonSubmit"
        android:layout_marginTop="@dimen/huge_dp"
        android:layout_marginBottom="@dimen/huge_dp"
        android:text="@string/sign_in_up" />
</androidx.appcompat.widget.LinearLayoutCompat>