<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contribute_card"
    style="@style/CardStyleRow">

    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_service_introduction">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_view_icon"
            style="@style/ImageTitleStyle"
            android:layout_alignParentStart="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/service_main_account_sale" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_view_title"
            style="@style/TextItem"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@id/image_view_arrow"
            android:layout_toEndOf="@id/image_view_icon"
            android:text="@string/app_name"
            android:textAllCaps="true" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_view_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/divider"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:padding="@dimen/large_dp"
            android:src="@drawable/arrow_up"
            android:tint="@color/dark_gray" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tiny_dp"
            android:layout_below="@id/image_view_icon"
            android:background="@color/light_gray" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_view_introduction"
            style="@style/TextItem"
            android:layout_width="match_parent"
            android:layout_below="@id/divider"
            android:lineSpacingExtra="@dimen/small_dp"
            android:text="@string/help_content_services"
            android:textAllCaps="true" />
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>