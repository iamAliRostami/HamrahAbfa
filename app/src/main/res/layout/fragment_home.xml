<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ui.home.HomeFragment">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_view_card"
        android:layout_margin="@dimen/large_dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:src="@drawable/background_card_empty" />

    <GridView
        android:layout_margin="@dimen/large_dp"
        android:id="@+id/grid_view_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/image_view_card"
        android:horizontalSpacing="@dimen/medium_dp"
        android:nestedScrollingEnabled="true"
        android:numColumns="3"
        android:verticalSpacing="@dimen/medium_dp"
        tools:listitem="@layout/item_card_layout" />

</RelativeLayout>