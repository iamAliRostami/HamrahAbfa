<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ui.home.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_layout_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/large_dp"
        android:layout_marginBottom="@dimen/large_dp">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/view_pager_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:saveEnabled="false"
            android:clipChildren="false"
            android:paddingEnd="@dimen/large_dp"
            android:paddingStart="@dimen/large_dp"
            android:clipToPadding="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

<!--        android:background="@drawable/background_card_empty"-->
    </androidx.constraintlayout.widget.ConstraintLayout>

    <GridView
        android:id="@+id/grid_view_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/constraint_layout_card"
        android:layout_margin="@dimen/large_dp"
        android:horizontalSpacing="@dimen/medium_dp"
        android:nestedScrollingEnabled="true"
        android:numColumns="3"
        android:verticalSpacing="@dimen/medium_dp"
        tools:listitem="@layout/item_card_menu_layout" />
</RelativeLayout>