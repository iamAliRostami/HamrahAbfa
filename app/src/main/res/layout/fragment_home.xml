<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ParentLayout"
    android:padding="0dp"
    tools:context=".fragments.ui.home.HomeFragment">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager_card"
        style="@style/CardStyleViewPager" />
    <GridView
        android:id="@+id/grid_view_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_pager_card"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/large_dp"
        android:horizontalSpacing="@dimen/medium_dp"
        android:nestedScrollingEnabled="true"
        android:numColumns="3"
        android:verticalSpacing="@dimen/medium_dp"
        tools:listitem="@layout/item_card_menu" />
</RelativeLayout>