<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/medium_dp"
    android:background="@drawable/background_white_blue"
    android:padding="@dimen/medium_dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_view_news"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/large_dp"
        android:src="@drawable/setting"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--    app:layout_constraintRight_toRightOf="parent"-->
    <!--    app:layout_constraintStart_toStartOf="parent"-->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_view_title"
        style="@style/Title.Bottom"
        android:padding="0dp"
        android:text="@string/title_home"
        app:layout_constraintBottom_toTopOf="@id/text_view_date"
        app:layout_constraintStart_toEndOf="@id/image_view_news"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_view_date"
        style="@style/TextItem"
        android:padding="0dp"
        android:text="12/12/12"
        android:textColor="@color/dark_gray"
        app:layout_constraintBottom_toBottomOf="@id/image_view_news"
        app:layout_constraintStart_toEndOf="@id/image_view_news"
        app:layout_constraintTop_toBottomOf="@id/text_view_title" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_view_summary"
        style="@style/TextItem"
        android:layout_width="wrap_content"
        android:lines="1"
        android:padding="@dimen/medium_dp"
        android:text="@string/services_help_content"
        app:layout_constraintEnd_toStartOf="@id/text_view_dots"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_view_news" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_view_dots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="..."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_view_news" />
</androidx.constraintlayout.widget.ConstraintLayout>