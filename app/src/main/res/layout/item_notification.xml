<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/medium_dp"
    android:background="@drawable/background_white_blue"
    android:padding="@dimen/medium_dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_view_news"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="@dimen/large_dp"
        android:src="@drawable/setting" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_view_title"
        style="@style/Title.Bottom"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/image_view_news"
        android:padding="0dp"
        android:text="@string/title_home" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_view_date"
        style="@style/TextItem"
        android:layout_below="@id/text_view_title"
        android:layout_toEndOf="@id/image_view_news"
        android:padding="0dp"
        android:text="12/12/12"
        android:textColor="@color/dark_gray" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_view_news">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_view_summary"
            style="@style/TextItem"
            android:layout_width="wrap_content"
            android:lines="1"
            android:padding="@dimen/medium_dp"
            android:paddingTop="0dp"
            android:text="@string/app_name" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_view_dots"
            style="@style/TextItem"
            android:padding="0dp"
            android:layout_width="wrap_content"
            android:layout_below="@id/image_view_news"
            android:layout_weight="1"
            android:text="..." />
    </androidx.appcompat.widget.LinearLayoutCompat>
</RelativeLayout>