        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_view_reading_info"
            style="@style/CardStyle"
            android:layout_below="@id/card_view_items"
            android:background="@drawable/background_service_introduction">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/text_view_reading_info"
                    style="@style/TextItem.SingleLine"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@id/image_view_arrow_4"
                    android:gravity="start"
                    android:text="@string/reading_info" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/image_view_arrow_4"
                    style="@style/ImageArrowStyle"
                    android:layout_above="@id/divider_4"
