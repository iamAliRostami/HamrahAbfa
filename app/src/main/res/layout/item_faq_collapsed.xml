<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/contribute_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/medium_dp"
    android:clickable="false"
    android:descendantFocusability="blocksDescendants"
    android:elevation="@dimen/medium_dp"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/medium_dp">

    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_service_introduction">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_view_question"
            style="@style/TextItem.SingleLine"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/image_view_arrow"
            android:gravity="start"
            android:text="@string/app_name"
            android:textAllCaps="true" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_view_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/divider"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:padding="@dimen/large_dp"
            android:src="@drawable/arrow_up"
            android:tint="@color/dark_gray" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tiny_dp"
            android:layout_below="@id/text_view_question"
            android:background="@color/light_gray" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_view_answer"
            style="@style/TextItem"
            android:layout_width="match_parent"
            android:layout_below="@id/divider"
            android:lineSpacingExtra="@dimen/small_dp"
            android:text="@string/help_content_services"
            android:textAllCaps="true" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>