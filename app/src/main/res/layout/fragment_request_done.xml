<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/large_dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/medium_dp"
    card_view:cardElevation="@dimen/medium_dp"
    tools:context=".fragments.dialog.RequestDoneFragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/large_dp">

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/request_submitted" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_view_track_number"
            style="@style/TitleHelp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="123456" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/TitleSubmitInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/write_track_number" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/done" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_return"
            style="@style/ButtonSubmit"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/large_dp"
            android:text="@string/main_page" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.cardview.widget.CardView>