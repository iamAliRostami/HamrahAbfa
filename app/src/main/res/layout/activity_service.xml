<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ServiceActivity">

    <com.shuhart.stepview.StepView
        android:id="@+id/stepper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/low_dp"
        app:sv_animationType="Circle"
        app:sv_doneCircleColor="@color/purple_7001"
        app:sv_doneCircleRadius="@dimen/medium_dp"
        app:sv_doneStepLineColor="@color/purple_7001"
        app:sv_doneStepMarkColor="@android:color/white"
        app:sv_doneTextColor="@color/purple_7001"
        app:sv_nextStepCircleColor="@color/gray_2"
        app:sv_nextStepCircleEnabled="true"
        app:sv_nextStepLineColor="@color/gray_2"
        app:sv_nextTextColor="@color/gray_2"
        app:sv_selectedCircleColor="@color/purple_7001"
        app:sv_selectedStepNumberColor="@android:color/white"
        app:sv_selectedTextColor="@color/purple_7001"
        app:sv_stepLineWidth="@dimen/small_dp"
        app:sv_stepNumberTextSize="@dimen/text_size_small"
        app:sv_stepPadding="@dimen/small_dp"
        app:sv_stepViewStyle="@style/StepView"
        app:sv_steps="@array/services_steps"
        app:sv_stepsNumber="4"
        app:sv_textSize="@dimen/text_size_medium"
        app:sv_typeface="@font/font_1" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_services"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/stepper"
        android:background="@color/gray_1"
        app:defaultNavHost="true" />
</RelativeLayout>