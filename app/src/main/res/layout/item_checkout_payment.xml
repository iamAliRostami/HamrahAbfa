<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/CardStyle.Parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/relative_layout_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">

            <com.google.android.material.textview.MaterialTextView
                style="@style/TextItem"
                android:layout_weight="0.5"
                android:text="@string/from" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_view_from"
                style="@style/TextItem.SingleLine"
                android:layout_weight="1"
                android:text="@string/from" />

            <com.google.android.material.textview.MaterialTextView
                style="@style/TextItem"
                android:layout_weight="0.5"
                android:text="@string/to" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_view_to"
                style="@style/TextItem.SingleLine"
                android:layout_weight="1"
                android:text="@string/to" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/relative_layout_date"
            android:weightSum="3">

            <com.google.android.material.textview.MaterialTextView
                style="@style/TextItem"
                android:layout_weight="0.5"
                android:text="@string/usage" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_view_usage"
                style="@style/TextItem.SingleLine"
                android:layout_weight="1"
                android:text="@string/usage" />

            <com.google.android.material.textview.MaterialTextView
                style="@style/TextItem"
                android:layout_weight="0.5"
                android:text="@string/price" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_view_price"
                style="@style/TextItem.SingleLine"
                android:layout_weight="1"
                android:text="@string/price" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>