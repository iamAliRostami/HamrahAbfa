<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/contribute_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/medium_dp"
    android:clickable="false"
    android:descendantFocusability="blocksDescendants"
    android:elevation="@dimen/medium_dp"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/medium_dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_service_introduction">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_view_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:contentDescription="@string/app_name"
            android:padding="@dimen/small_dp"
            android:src="@drawable/service_main_account_sale"
            android:tint="@color/purple_7001" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_view_title"
            style="@style/TextItem"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/image_view_arrow"
            android:layout_toEndOf="@id/image_view_icon"
            android:text="@string/app_name"
            android:textAllCaps="true" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_view_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:padding="@dimen/large_dp"
            android:src="@drawable/arrow_down"
            android:tint="@color/dark_gray" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>