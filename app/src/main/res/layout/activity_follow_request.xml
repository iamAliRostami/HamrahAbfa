<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue"
    android:padding="@dimen/large_dp"
    tools:context=".activities.FollowRequestActivity">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_tab_layout"
        app:tabInlineLabel="false" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tab_layout"
        android:layout_marginTop="@dimen/large_dp"
        android:layout_marginBottom="@dimen/xlarge_dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/float_button_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_search"
        app:elevation="@dimen/medium_dp"
        app:layout_anchor="@id/view_pager"
        app:layout_anchorGravity="bottom|left|end"
        app:tint="@color/light" />
</RelativeLayout>